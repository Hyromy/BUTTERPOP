                    <!-- <Frame x:Name="navScreach"
                           WidthRequest="64"
                           Padding="8"
                           BackgroundColor="#00000000"
                           CornerRadius="64">

                        <Image Source="nav_search_white.png"/>
                    </Frame> -->

                    <!-- perfil -->
                    <!-- <Frame x:Name="navProfile"
                           WidthRequest="64"
                           Padding="8"
                           BackgroundColor="#00000000"
                           CornerRadius="64">

                        <Image Source="nav_profile_white.png"/>
                    </Frame>
                </StackLayout>
            </Frame> -->
        </Grid>
    </ContentPage.Content>
</ContentPage>