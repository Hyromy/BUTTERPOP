<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BUTTERPOP.vistas.tarjeta.DetalleBillingPage"
             Title="Mis métodos de pago"
            BackgroundColor="#1C1C1C">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label x:Name="txtCorreoElec"  TextColor="White" />
            
            <Label x:Name="txtTarjeta"   TextColor="White" />
            <Label x:Name="txtTipo"   TextColor="White" />
            <Label x:Name="txtMes"  Grid.Row="0" Grid.Column="4" TextColor="White" />
            <Label x:Name="txtAnio"  Grid.Row="0" Grid.Column="5" TextColor="White" />
            <Label x:Name="txtCVV"  Grid.Row="0" Grid.Column="6" TextColor="White" />
            
        </StackLayout>
     
    </ContentPage.Content>
</ContentPage>